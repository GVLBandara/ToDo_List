<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginFormController">
    <Label layoutX="43.0" layoutY="14.0" text="Login to ToDo List">
        <font>
          <Font size="20.0" />
        </font>
    </Label>
    <Label layoutX="24.0" layoutY="76.0" text="User Name">
        <font>
          <Font size="16.0" />
        </font>
    </Label>
    <TextField fx:id="txtName" layoutX="24.0" layoutY="108.0" onAction="#txtNameOnAction" onKeyTyped="#txtNameKeyTyped">
        <font>
          <Font size="16.0" />
        </font>
    </TextField>
    <Label layoutX="24.0" layoutY="164.0" text="Password">
        <font>
          <Font size="16.0" />
        </font>
    </Label>
    <PasswordField fx:id="txtPassword" layoutX="24.0" layoutY="196.0" onAction="#txtPasswordOnAction">
        <font>
          <Font size="16.0" />
        </font>
    </PasswordField>
    <Button fx:id="btnLogin" layoutX="24.0" layoutY="269.0" mnemonicParsing="false" onAction="#btnLoginONAction" prefHeight="38.0" prefWidth="199.0" style="-fx-background-color: #0984e3;" text="LogIn" textFill="WHITE">
        <font>
          <Font size="16.0" />
        </font>
    </Button>
    <Label layoutX="70.0" layoutY="307.0" onMouseClicked="#lblCreateNewAccountOnClicks" text="Create New Account" textFill="#6c5ce7" underline="true">
        <cursor>
          <Cursor fx:constant="HAND" />
        </cursor>
    </Label>
</AnchorPane>
